{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "noEmitOnError": true,
    "outDir": "dist/plugin-sdk",
    "rootDir": "upstream/src",
    "tsBuildInfoFile": "dist/plugin-sdk/.tsbuildinfo"
  },
  "include": [
    "upstream/src/plugin-sdk/index.ts",
    "upstream/src/plugin-sdk/account-id.ts",
    "upstream/src/types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist", "upstream/src/**/*.test.ts"]
}
